<Window x:Class="GameLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sharedViews="clr-namespace:GameLibrary.Views.Shared"
        xmlns:layouts="clr-namespace:GameLibrary.Views.Layouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20px" />
            <RowDefinition />
            <RowDefinition Height="15px" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <sharedViews:Menu x:Name="menu" Grid.Column="0" Grid.Row="0" />
        <layouts:Tabs x:Name="layout" />
        <sharedViews:StatusBar x:Name="statusBar" Grid.Column="0" Grid.Row="2" />
    </Grid>
</Window>